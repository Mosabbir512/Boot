
@Repository
public interface ProductRepository extends JpaRepository<Product,Integer> {
  // Limit,Sort
     //page_size=10,  page_number=0,1,2,...
     List<Product> findProductsByCategory_Name(String name, Limit limit, Sort sort);
}



package com.sdlc.pro.edj;


